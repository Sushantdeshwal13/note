<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" name="title" class=" w-full rounded-md block px-5 py-2 bg-zinc-800 " placeholder="title goes here">
                <textarea name="details" class="block w-full rounded-md mt-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="write task details"></textarea>
                <input  class="mt-2 bg-blue-600 px-5 py-2 rounded" type="submit" value="create task"  >
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if(files.length>0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-73 rounded-md px-3 py-4 bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
                       <div class="flex w-full justify-between  mt-3 items-center">
                        <a class="text-blue-500 inline-block"  href="/file/<%=val%>">Read more.</a>
                        <a class="text-zinc-600" href="/edit/<%= val%>">Edit filename</a>
                    </div>
                </div>
           <% }) %>
            <%}else { %>
                <h3 class="text-zinc-600">no tasks yet</h3>
          <%  } %>
            
           
        </div>
        
    </div>
</body>
</html>